<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <menuitem icon="terp-partner"
            id="base.menu_base_ktv_sale" name="KTV后台"
            sequence="0" />

        <menuitem id="base.menu_ktv_base_info" name="基础数据"
            parent="base.menu_base_ktv_sale" sequence="1"
            />

        <record id="view_ktv_room_type_form" model="ir.ui.view">
            <field name="name">ktv.ktv_room_type</field>
            <field name="model">ktv.ktv_room_type</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="room_type">
                    <field name="name" select="1"  required="1"/>
                    <field name="fee_type_id" required="1" widget="selection" domain="[('active','=',True)]"/>
                    <field name="serve_persons" />
                    <separator colspan="4" string="fee"/>
                    <field name="room_fee"/>
                    <field name="hourly_fee"/>
                    <field name="buyout_fee"/>
                    <field name="minimum_fee"/>
                    <field name="active"/>
                    <separator colspan="4" />
                    <field colspan='3' name="description"/>
                </form>
            </field>
        </record>

        <record id="view_ktv_room_type_tree" model="ir.ui.view">
            <field name="name">ktv.ktv_room_type</field>
            <field name="model">ktv.ktv_room_type</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="包厢类别">
                    <field name="name"/>
                    <field name="fee_type_id" />
                    <field name="serve_persons" />
                    <field name="room_fee"/>
                    <field name="hourly_fee"/>
                    <field name="buyout_fee"/>
                    <field name="minimum_fee"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>


       <record id="action_ktv_room_type_form" model="ir.actions.act_window">
            <field name="name">包厢类别</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ktv.ktv_room_type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name='help'>可以将KTV包厢分为不同的类别,并设定不同包厢类别的各种费用</field>
        </record>
        <!--包厢类别菜单-->
        <menuitem action="action_ktv_room_type_form" id="menu_action_ktv_room_type_form" parent="base.menu_ktv_base_info" sequence="0"/>

        <!--计费方式-->
        <record id="view_ktv_fee_type_form" model="ir.ui.view">
            <field name="name">ktv.ktv_fee_type</field>
            <field name="model">ktv.ktv_fee_type</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="room_type">
                    <field name="name" select="1"  required="1"/>
                    <field name="description" />
                    <field name="active"/>
                </form>
            </field>
        </record>

        <record id="view_ktv_fee_type_tree" model="ir.ui.view">
            <field name="name">ktv.ktv_fee_type</field>
            <field name="model">ktv.ktv_fee_type</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="计费方式">
                    <field name="name"/>
                    <field name="description" />
                    <field name="active"/>
                </tree>
            </field>
        </record>


       <record id="action_ktv_fee_type" model="ir.actions.act_window">
            <field name="name">计费方式</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ktv.ktv_fee_type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name='help'>为包厢设置不同的计费方式</field>
        </record>

        <menuitem action="action_ktv_fee_type" id="menu_action_ktv_fee_type" parent="base.menu_ktv_base_info" name="计费方式" sequence="0"/>

        <!--包厢区域-->
        <record id="view_ktv_room_area_form" model="ir.ui.view">
            <field name="name">ktv.ktv_room_area</field>
            <field name="model">ktv.ktv_room_area</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="room_area">
                    <field name="name" select="1"  required="1"/>
                    <field name="description" />
                    <field name="active"/>
                </form>
            </field>
        </record>

        <record id="view_ktv_room_area_tree" model="ir.ui.view">
            <field name="name">ktv.ktv_room_area</field>
            <field name="model">ktv.ktv_room_area</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="room area">
                    <field name="name"/>
                    <field name="description" />
                    <field name="active"/>
                </tree>
            </field>
        </record>


        <record id="action_ktv_room_area" model="ir.actions.act_window">
            <field name="name">包厢区域</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ktv.ktv_room_area</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name='help'>为包厢设置不同的区域</field>
        </record>

        <menuitem action="action_ktv_room_area" id="menu_action_ktv_room_area" parent="base.menu_ktv_base_info" name="包厢区域" sequence="0"/>
        <!--包厢信息定义-->
        <record id="view_ktv_room_form" model="ir.ui.view">
            <field name="name">ktv.ktv_room</field>
            <field name="model">ktv.ktv_room</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="room_area">
                    <field name="name" select="1"  required="1"/>
                    <field name="ktv_room_area_id" select="1" />
                    <field name="ktv_room_type_id" select="1" on_change="onchange_ktv_room_type_id(ktv_room_type_id)" />
                    <field name="fee_type_id" select="1"  />
                    <separator colspan="4" string="费用"/>
                    <field name="room_fee" />
                    <field name="hourly_fee" />
                    <field name="buyout_fee" />
                    <field name="minimum_fee" />
                    <field name="state" />
                    <separator colspan="4" />
                    <field name="img_1" widget="image" />
                    <field name="img_2" widget="image" />
                    <separator colspan="4" />
                    <field name="description" />
                    <field name="active"/>
                </form>
            </field>
        </record>

        <record id="view_ktv_room_tree" model="ir.ui.view">
            <field name="name">ktv.ktv_room</field>
            <field name="model">ktv.ktv_room</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="room area">
                    <field name="name"/>
                    <field name="ktv_room_area_id"/>

                    <field name="ktv_room_type_id" />
                    <field name="fee_type_id" />

                    <field name="room_fee" />
                    <field name="hourly_fee" />
                    <field name="buyout_fee" />
                    <field name="minimum_fee" />
                    <field name="state" />
                    <field name="description" />
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_ktv_room_search" model="ir.ui.view">
            <field name="name">ktv.ktv_room.select</field>
            <field name="model">ktv.ktv_room</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Search ktv rooms">
                    <filter icon="terp-document-new" string="空闲" domain="[('state','=','in_free')]" help="空闲中的包厢"/>
                    <filter icon="terp-document-new" string="使用中" domain="[('state','=','in_use')]" help="使用中的包厢"/>
                    <filter icon="terp-document-new" string="调试" domain="[('state','=','in_debug')]" help="调试中的包厢"/>
                    <filter icon="terp-document-new" string="清洁" domain="[('state','=','in_clean')]" help="清洁中的包厢"/>
                    <separator orientation="vertical"/>
                    <filter icon="terp-document-new" string="有效" domain="[('active','=',True)]" help="状态为有效的包厢"/>
                    <separator orientation="vertical"/>
                    <field name="name"
                        filter_domain="['|', ('name','ilike',self),('client_order_ref','ilike',self)]"/>
                    <field name="ktv_room_type_id" widget="selection"/>
                    <field name="ktv_room_area_id"  widget="selection"/>
                    <newline/>
               </search>
            </field>
        </record>


        <record id="action_ktv_room" model="ir.actions.act_window">
            <field name="name">包厢信息</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ktv.ktv_room</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_ktv_room_search" />
            <field name='help'>设置包厢信息</field>
        </record>

        <menuitem action="action_ktv_room" id="menu_action_ktv_room" parent="base.menu_ktv_base_info" name="包厢设置" sequence="0"/>

    </data>
</openerp>
