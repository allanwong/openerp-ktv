<?xml version="1.0" encoding="UTF-8"?>
<!-- vim:fdl=1:
-->
<templates id="template" xml:space="preserve">
    <t t-name="RoomPointOfSale">
        <div id="room_pos_wrapper">
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container-fluid">
                        <a class="brand" href="#">
                            <img src="/point_of_sale/static/src/img/logo.png"/>
                        </a>
                        <div class="pull-right">
                            <button class="btn btn-danger" type="button">退出</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container-fluid">
                <div class="row-fluid">
                    <div class='span10'>
                        <div id="room_status"></div>
                        <div id="room_filter"></div>
                        <hr/>
                        <ul id="room_list" class="thumbnails"></ul>
                    </div>

                    <div class='span2'>
                        <div class="well sidebar-nav">
                            <ul class="nav nav-list">
                                <li><a href="#">预定</a></li>
                                <li class="divider"></li>
                                <li><a href="#">开房</a></li>
                                <li><a href="#">换房</a></li>
                                <li><a href="#">并房</a></li>
                                <li class="divider"></li>
                                <li><a href="#">买钟</a></li>
                                <li><a href="#">买断</a></li>
                                <li><a href="#">续钟</a></li>
                                <li><a href="#">退钟</a></li>
                                <li class="divider"></li>
                                <li><a href="#">结账</a></li>
                            </ul>
                        </div><!--/.well -->
                    </div>
                </div>
            </div>
        </div>
    </t>
    <!--包厢widget-->
    <t t-name="room-template">
        <table class="table well">
            <tr>
                <td width="30"><span class="label label-info"><t t-esc="room_type_id[1]"/></span></td>
                <td width="30"></td>
                <td width="30"><span class="label label-important"><t t-esc="state_description"/></span></td>
            </tr>
            <tr>
                <td colspan="3">&#160;</td>
            </tr>
            <tr>
                <td colspan="3">&#160;</td>
            </tr>
            <tr>
                <td colspan="3">&#160;</td>
            </tr>
            <tr>
                <td colspan="3">
                    <div class="btn-group pull-center">
                        <button class="btn"><t t-esc="name"/></button>
                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="action_room_scheduled" href="#">预定</a></li>
                            <li><a class="action_room_scheduled_cancel" href="#">取消预定</a></li>
                            <li class="divider"></li>
                            <li><a class="action_room_open" href="#">开房</a></li>
                            <li><a class="action_room_change" href="#">换房</a></li>
                            <li><a class="action_room_merge" href="#">并房</a></li>
                            <li class="divider"></li>
                            <li><a class="action_room_buy_time" href="#">买钟</a></li>
                            <li><a class="action_room_buyout" href="#">买断</a></li>
                            <li><a class="action_room_buy_time_continue" href="#">续钟</a></li>
                            <li><a class="action_room_buy_time_back" href="#">退钟</a></li>
                            <li class="divider"></li>
                            <li><a class="action_room_checkout" href="#">结账</a></li>
                            <li><a class="action_room_reopen" href="#">结账重开</a></li>
                        </ul>
                    </div>
                </td>
            </tr>

        </table>
    </t>

<!--包厢状态-->
    <!--#空闲、使用、预订、锁定、已结帐、买断、故障、呼叫?、提醒?、带客、清洁、调试 -->
    <!--'free', 'in_use', 'scheduled', 'locked', 'checkout', 'buyout', 'malfunction', 'visit', 'clean', 'debug' -->
    <t t-name="room-status-template">
        <div class="btn-toolbar">
            <div class='btn-group'>
                <button class='btn'>显示所有状态</button>
            </div>
            <div class='btn-group'>
                <button class='btn'>空闲<span class="badge"><t t-esc="free"/></span></button>
                <button class='btn'>使用<span class="badge badge-success"><t t-esc="in_use"/></span></button>
                <button class='btn'>预定<span class="badge"><t t-esc="scheduled"/></span></button>
                <button class='btn'>锁定<span class="badge"><t t-esc="locked"/></span></button>
                <button class='btn'>已结账<span class="badge"><t t-esc="checkout"/></span></button>
                <button class='btn'>买断<span class="badge"><t t-esc="buyout"/></span></button>
                <button class='btn'>买钟<span class="badge"><t t-esc="buyout"/></span></button>
                <button class='btn'>故障<span class="badge badge-warnning"><t t-esc="malfunction"/></span></button>
                <button class='btn'>带客<span class="badge"><t t-esc="visit"/></span></button>
                <button class='btn'>清洁<span class="badge"><t t-esc="clean"/></span></button>
                <button class="btn">调试<span class="badge"><t t-esc="debug"/></span></button>
            </div>
        </div>
    </t>

    <!--room filter-->
    <t t-name="room-filter">
        <div class='btn-toolbar'>
            <!--包厢区域-->
            <div class='btn-group'>
                <button class='btn'>全部区域</button>
                <t t-foreach="room_areas" t-as="room_area">
                    <button class='btn'><t t-esc="room_area.name" /></button>
                </t>
            </div>

            <!--包厢类别-->
            <div class='btn-group'>
                <button class='btn active'>全部类别</button>
                <t t-foreach="room_types" t-as="room_type">
                    <button class='btn'><t t-esc="room_type.name" /></button>
                </t>
            </div>
        </div>
    </t>

    <!--包厢预定-->
    <t t-name="room-scheduled-form-template">
        <form class="form-horizontal" id="room_scheduled_form">
            <div class="control-group info">
                <label class="control-label" for="room_id">包厢名称:</label>
                <div class="controls">
                    <select id="room_id" name="room_id">
                        <t t-foreach="rooms" t-as="r">
                            <option t-att-value="r.id"><t t-esc="r.name"/></option>
                        </t>
                    </select>
                </div>
            </div>
            <div class="control-group info">
                <label class="control-label" for="guest_name">预定人:</label>
                <div class="controls">
                    <input type="text" class="required" id="guest_name" name="guest_name" />
                </div>
            </div>
            <div class="control-group info">
                <label class="control-label" for="scheduled_time">预定时间:</label>
                <div class="controls">
                    <input type="text" class="required" id="scheduled_time" name="scheduled_time" t-att-value="model.scheduled_time"/>
                </div>
            </div>
            <div class="control-group info">
                <label class="control-label" for="guest_phone">联系电话:</label>
                <div class="controls">
                    <input type="text" class="required" id="guest_phone" name="guest_phone"/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="persons_count">人数:</label>
                <div class="controls">
                    <input type="text" id="persons_count" class="number" name="persons_count"/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="description">备注:</label>
                <div class="controls">
                    <textarea rows="3" id="description" name="description" />
                </div>
            </div>
        </form>
    </t>
</templates>
